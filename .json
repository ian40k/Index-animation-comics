'use client'
import { useState, useEffect } from 'react'
import Head from 'next/head'
import '../styles/globals.css'

export default function Home() {
  const [activeSection, setActiveSection] = useState('home')

  // Sample data - replace with actual content
  const animations = [
    {
      id: 1,
      title: "My First Animation",
      file: "/animations/animation1.mp4",
      thumbnail: "/animations/thumb1.jpg",
      description: "A short description of the animation"
    },
    {
      id: 2,
      title: "Character Walk Cycle",
      file: "/animations/animation2.mp4",
      thumbnail: "/animations/thumb2.jpg",
      description: "A smooth walk cycle animation"
    }
  ]

  const comics = [
    {
      id: 1,
      title: "Comic Strip #1",
      image: "/comics/comic1.jpg",
      description: "First comic strip adventure"
    },
    {
      id: 2,
      title: "Weekly Comic",
      image: "/comics/comic2.jpg",
      description: "Latest weekly release"
    },
    {
      id: 3,
      title: "Character Intro",
      image: "/comics/comic3.jpg",
      description: "Meet the main character"
    }
  ]

  useEffect(() => {
    const handleScroll = () => {
      const sections = ['home', 'animations', 'comics', 'about']
      const current = sections.find(section => {
        const element = document.getElementById(section)
        if (element) {
          const rect = element.getBoundingClientRect()
          return rect.top <= 100 && rect.bottom >= 100
        }
        return false
      })
      if (current) setActiveSection(current)
    }

    window.addEventListener('scroll', handleScroll)
    return () => window.removeEventListener('scroll', handleScroll)
  }, [])

  const scrollToSection = (sectionId) => {
    const element = document.getElementById(sectionId)
    if (element) {
      element.scrollIntoView({ behavior: 'smooth' })
    }
  }

  return (
    <>
      <Head>
        <title>Animation & Comics Portfolio</title>
        <meta name="description" content="Showcase of animations and comics" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
      </Head>

      <div className="app">
        <header>
          <nav>
            <div className="logo">
              <h1>My Animations & Comics</h1>
            </div>
            <ul className="nav-links">
              {['home', 'animations', 'comics', 'about'].map(section => (
                <li key={section}>
                  <a
                    href={`#${section}`}
                    className={activeSection === section ? 'active' : ''}
                    onClick={(e) => {
                      e.preventDefault()
                      scrollToSection(section)
                    }}
                  >
                    {section.charAt(0).toUpperCase() + section.slice(1)}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </header>

        <main>
          <section id="home" className="hero">
            <div className="hero-content">
              <h2>Welcome to My Creative Space</h2>
              <p>Explore my animations and comics</p>
            </div>
          </section>

          <section id="animations" className="section">
            <div className="container">
              <h2>Animations</h2>
              <div className="gallery">
                {animations.map(animation => (
                  <div key={animation.id} className="gallery-item">
                    <video
                      controls
                      poster={animation.thumbnail}
                      preload="metadata"
                    >
                      <source src={animation.file} type="video/mp4" />
                      Your browser does not support the video tag.
                    </video>
                    <div className="item-info">
                      <h3>{animation.title}</h3>
                      <p>{animation.description}</p>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </section>

          <section id="comics" className="section">
            <div className="container">
              <h2>Comics</h2>
              <div className="gallery">
                {comics.map(comic => (
                  <div key={comic.id} className="gallery-item">
                    <img
                      src={comic.image}
                      alt={comic.title}
                      loading="lazy"
                    />
                    <div className="item-info">
                      <h3>{comic.title}</h3>
                      <p>{comic.description}</p>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </section>

          <section id="about" className="section">
            <div className="container">
              <h2>About Me</h2>
              <div className="about-content">
                <p>Welcome to my creative portfolio! I create animations and comics.</p>
                <p>Follow my journey as I bring stories to life through animation and illustration.</p>
              </div>
            </div>
          </section>
        </main>

        <footer>
          <div className="container">
            <p>&copy; 2024 My Animations & Comics. All rights reserved.</p>
          </div>
        </footer>
      </div>
    </>
  )
}* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

:root {
  --primary-color: #2c3e50;
  --secondary-color: #3498db;
  --accent-color: #e74c3c;
  --text-color: #333;
  --background-color: #fff;
  --section-padding: 80px 2rem;
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: 'Arial', sans-serif;
  line-height: 1.6;
  color: var(--text-color);
  overflow-x: hidden;
}

header {
  background: var(--primary-color);
  color: white;
  padding: 1rem 0;
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 1000;
  backdrop-filter: blur(10px);
}

nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.logo h1 {
  font-size: 1.5rem;
  font-weight: 700;
}

.nav-links {
  display: flex;
  list-style: none;
  gap: 2rem;
}

.nav-links a {
  color: white;
  text-decoration: none;
  transition: color 0.3s ease;
  padding: 0.5rem 1rem;
  border-radius: 5px;
}

.nav-links a:hover,
.nav-links a.active {
  color: var(--secondary-color);
  background: rgba(255, 255, 255, 0.1);
}

main {
  margin-top: 80px;
}

.hero {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 150px 2rem;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.hero::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.hero-content {
  position: relative;
  z-index: 2;
}

.hero-content h2 {
  font-size: clamp(2.5rem, 5vw, 4rem);
  margin-bottom: 1rem;
  font-weight: 700;
}

.hero-content p {
  font-size: 1.25rem;
  opacity: 0.9;
}

.section {
  padding: var(--section-padding);
}

.container {
  max-width: 1200px;
  margin: 0 auto;
}

.section h2 {
  text-align: center;
  margin-bottom: 3rem;
  font-size: clamp(2rem, 4vw, 3rem);
  color: var(--primary-color);
  font-weight: 700;
}

.gallery {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 2rem;
  margin-top: 2rem;
}

.gallery-item {
  background: #f8f9fa;
  border-radius: 15px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 1px solid #e9ecef;
}

.gallery-item:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
}

.gallery-item img,
.gallery-item video {
  width: 100%;
  height: 250px;
  object-fit: cover;
  display: block;
}

.item-info {
  padding: 1.5rem;
}

.item-info h3 {
  margin-bottom: 0.5rem;
  color: var(--primary-color);
  font-size: 1.25rem;
  font-weight: 600;
}

.item-info p {
  color: #666;
  line-height: 1.5;
}

.about-content {
  text-align: center;
  max-width: 600px;
  margin: 0 auto;
  font-size: 1.1rem;
  line-height: 1.8;
}

.about-content p {
  margin-bottom: 1rem;
}

footer {
  background: var(--primary-color);
  color: white;
  text-align: center;
  padding: 3rem 2rem;
  margin-top: 4rem;
}

/* Responsive Design */
@media (max-width: 768px) {
  nav {
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }

  .nav-links {
    gap: 1rem;
  }

  .hero {
    padding: 120px 1rem;
  }

  .section {
    padding: 60px 1rem;
  }

  .gallery {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .gallery-item img,
  .gallery-item video {
    height: 200px;
  }
}

@media (max-width: 480px) {
  .nav-links {
    flex-direction: column;
    gap: 0.5rem;
  }

  .hero-content h2 {
    font-size: 2rem;
  }

  .gallery {
    grid-template-columns: 1fr;
  }
}

/* Loading states */
.gallery-item {
  opacity: 0;
  animation: fadeInUp 0.6s ease forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: #f1f1f1;
}

::-webkit-scrollbar-thumb {
  background: var(--secondary-color);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: #2980b9;
}
